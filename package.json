  "main": "build/index.js",
  "scripts": {
    "compile": "tsc",
    "watch": "tsc --watch",
    "package": "ncc build -o dist/preflight --source-map src/preflight.ts && ncc build -o dist/check --source-map src/check.ts",
    "build": "yarn compile && yarn package",
    "test": "appmap-agent-js -- jest --runInBand --no-cache",
    "clean": "rm -rf build dist tmp",
    "format": "prettier --write '**/*.ts'"
  },
  "devDependencies": {
    "@appland/appmap-agent-js": "^13.7.0",
    "@types/argparse": "^2.0.10",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.15",
    "@vercel/ncc": "^0.36.1",
    "glob": "^9.3.4",
    "jest": "^29.5.0",
    "openapi-diff": "^0.23.6",
    "prettier": "^2.8.7",
    "sinon": "^15.2.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@actions/artifact": "^1.1.1",
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "argparse": "^2.0.1",
    "handlebars": "^4.7.7"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
